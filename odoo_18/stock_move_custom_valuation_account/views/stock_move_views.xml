<odoo>
    <data>
        <!-- Inherit picking form -->
        <record id="view_picking_form_inherit_custom_account" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit.custom.account</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <!-- ندخل على tree بتاع move_ids_without_package -->
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="custom_account_field_id"/>
                </xpath>
            </field>
        </record>
        <record id="view_picking_form_inherit_journal_items_box" model="ir.ui.view">
            <field name="name">stock.picking.journal.items.box</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_button_box']" position="inside">
                    <button name="action_view_journal_items"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-book">
                        <field name="journal_items_count" widget="statinfo" string="Journal Items"/>
                    </button>
                </xpath>
            </field>
        </record>



    </data>

</odoo>
