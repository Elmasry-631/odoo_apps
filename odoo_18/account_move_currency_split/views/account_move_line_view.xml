
<odoo>
    <record id="view_move_line_tree_inherit_currency" model="ir.ui.view">
        <field name="name">account.move.line.tree.currency.split</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='credit']" position="after">
                <field name="debit_currency" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total"/>
                <field name="credit_currency" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total"/>
            </xpath>
        </field>
    </record>
</odoo>
