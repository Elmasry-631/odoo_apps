<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_enhancement_view_account_list_inherit" model="ir.ui.view">
            <field name="name">account_enhancement_view_account_list_inherit</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='allowed_journal_ids']" position="after">
                    <field name="is_free_account" optional="hide"/>
                </xpath>
            </field>
        </record>
        <record id="account_enhancement_view_account_form_inherit" model="ir.ui.view">
            <field name="name">account_enhancement_view_account_form_inherit</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <group>
                        <field name="is_free_account"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>