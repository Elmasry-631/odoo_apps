<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="inherit_account_payment_register" model="ir.ui.view">
        <field name="name">inherit_account_payment_register</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='communication']" position="after">
                <field name="egp_currency_id" invisible="1"/>
                <field name="usd_currency_id" invisible="1"/>
                <field name="approved_egp_amount"/>
                <field name="approved_usd_amount"/>
                <button name="action_approved_amount" type="object" string="Approved Amount"/>
            </xpath>
            <xpath expr="//group" position="inside">
                <field name="invoice_line_ids">
                    <list editable="bottom">
                        <field name="product_id"/>
                        <field name="usd_amount"  column_invisible="1"/>
                        <field name="egp_amount"  column_invisible="1"/>
                        <field name="usd_percentage" widget="percentage"/>
                        <field name="egp_percentage" widget="percentage"/>
                        <field name="is_amount"/>
                        <field name="usd_amount" sum="usd_amount"/>
                        <field name="egp_amount" sum="egp_amount"/>
                        <field name="price_total" string="Total" sum="price_total"/>
                        <field name="currency_id" string="currency" optional="hide"/>
                    </list>
                </field>
            </xpath>

        </field>
    </record>
    <!-- Inherit account move Form View to Modify it vendor code -->
    <record id="inherit_account_move_add_code" model="ir.ui.view">
        <field name="name">inherit_account_move_add_code</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='header_left_group']" position="inside">
                    <field name="is_egp_currency" invisible="1"/>
                    <field name="total_invoice_amount"/>
                    <field name="total_invoice_amount_egp"/>
                    <field name="total_invoice_amount_usd"/>
                    <field name="egp_percentage" widget="percentage" force_save="1" readonly="is_egp_currency or state == 'posted'"/>
                    <field name="usd_percentage" widget="percentage" force_save="1" readonly="is_egp_currency or state == 'posted'"/>
            </xpath>
            <xpath expr="//div[@name='journal_div']" position="after">
                <field name="egp_currency_id" invisible="1"/>
                <field name="usd_currency_id" invisible="1"/>
                <field name="approved_egp_amount" force_save="1" />
                <field name="approved_usd_amount"/>
                <field name="is_free_journal" invisible="1"/>
            </xpath>
            <xpath expr="//label[@for='partner_id']" position="after">
                <label for="code_id" string="Vendor Code" style="font-weight:bold;" invisible="move_type not in ('in_invoice', 'in_refund', 'in_receipt')"/>
                <div class="o_col" invisible="move_type not in ('out_invoice', 'out_refund', 'out_receipt', 'in_invoice', 'in_refund', 'in_receipt')">
                    <field name="code_id"/>
                </div>
            </xpath>
            <xpath expr="//group[@id='header_left_group']" position="inside">
                <field name="patch_no"/>
            </xpath>

            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='invoice_tab']/field[@name='invoice_line_ids']/list[1]/field[@name='analytic_distribution']" position="after">
                <field name="usd_amount" sum="usd_amount"/>
                <field name="egp_amount" sum="egp_amount"/>
                <field name="usd_percentage" widget="percentage" readonly="1"/>
                <field name="egp_percentage" widget="percentage" readonly="1"/>
                <field name="usd_currency_id" column_invisible="True"/>
                <field name="egp_currency_id" column_invisible="True"/>
                <field name="is_amount"/>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='invoice_tab']/field[@name='invoice_line_ids']/list[1]/field[@name='analytic_distribution']" position="before">
                <field name="amount_egp_currency"/>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='invoice_tab']/field[@name='invoice_line_ids']/list[1]/field[@name='tax_ids']" position="attributes">
                <attribute name="column_invisible">False</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='invoice_tab']/field[@name='invoice_line_ids']/list[1]/field[@name='tax_ids']" position="after">
                <field name="new_tax_ids" widget="many2many_tax_tags" column_invisible="1"
                       domain="[('type_tax_use', '=?', parent.invoice_filter_type_domain), ('company_id', 'parent_of', parent.company_id), ('country_id', '=', parent.tax_country_id)]"
                       context="{'append_type_to_tax_name': not parent.invoice_filter_type_domain, 'active_test': True}"
                       options="{'no_create': True}"
                       optional="show"/>

                <field name="line_amount_tax"/>
            </xpath>
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <button name="action_open_partner_ledger"
                        type="object"
                        string="Partner Ledger"
                        invisible="move_type != 'in_invoice'"
                        class="btn-secondary"/>
                <button name="action_view_all_related_move_lines"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-book"
                        string="journal Entries"
                        invisible="move_type != 'in_invoice'">
                    <field name="related_move_lines_count" widget="statinfo" options="{'no_label': True}"/>
                </button>
            </xpath>



        </field>
    </record>

    <record id="account_enhancement_view_invoice_tree_inherit" model="ir.ui.view">
        <field name="name">account_enhancement_view_invoice_tree_inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='ref']" position="after">
                <field name="egp_currency_id" column_invisible="1"/>
                <field name="usd_currency_id" column_invisible="1"/>
                <field name="approved_egp_amount" sum="approved_egp_amount"/>
                <field name="approved_usd_amount" sum="approved_usd_amount"/>
            </xpath>
            <xpath expr="//field[@name='amount_residual_signed']" position="after">
                <field name="rate_today"/>
                <field name="total_invoice_amount_egp"/>
                <field name="total_invoice_amount_usd"/>
                <!--                 <field name="amount_pay_egp"/>-->
                <!--                 <field name="amount_usd"/>-->
                <!--                 <field name="invoice_total_amount_today"/>-->
                <!--                 <field name="currency_rate_id" column_invisible="1"/>-->
            </xpath>

        </field>
    </record>
    <record id="account.action_move_in_invoice" model="ir.actions.act_window">
        <field name="name">Invoice Tracking</field>
    </record>

</odoo>