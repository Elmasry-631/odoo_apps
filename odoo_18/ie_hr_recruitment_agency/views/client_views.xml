<odoo>
    <record id="view_hr_recruitment_client_form" model="ir.ui.view">
        <field name="name">hr.recruitment.client.form</field>
        <field name="model">hr.recruitment.client</field>
        <field name="arch" type="xml">
            <form string="Recruitment Client">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="client_type"/>
                    </group>
                    <group>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="address" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Contracts">
                            <field name="contract_ids" readonly="1">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_recruitment_client_list" model="ir.ui.view">
        <field name="name">hr.recruitment.client.list</field>
        <field name="model">hr.recruitment.client</field>
        <field name="arch" type="xml">
            <list>
                <field name="partner_id"/>
                <field name="client_type"/>
                <field name="phone"/>
                <field name="email"/>
            </list>
        </field>
    </record>


</odoo>
