<odoo>
    <record id="view_order_form_inherit_whatsapp_bridge" model="ir.ui.view">
        <field name="name">sale.order.form.whatsapp.bridge</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="%(action_whatsapp_compose)d"
                        type="action"
                        string="WhatsApp"
                        class="btn-secondary"
                        context="{'active_model':'sale.order','active_id':active_id}"/>
            </header>
        </field>
    </record>
</odoo>