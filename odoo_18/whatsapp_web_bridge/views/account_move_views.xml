<odoo>
    <record id="view_move_form_inherit_whatsapp_bridge" model="ir.ui.view">
        <field name="name">account.move.form.whatsapp.bridge</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- هنا بنعمل استهداف للـ header -->
            <xpath expr="//form/sheet/notebook/page/field[@name='line_ids']/.." position="before"/>

            <xpath expr="//header" position="inside">
                <button name="%(action_whatsapp_compose)d"
                        type="action"
                        string="WhatsApp"
                        class="btn-secondary"
                        context="{'active_model': 'account.move', 'active_id': active_id}"/>
            </xpath>

        </field>
    </record>
</odoo>
