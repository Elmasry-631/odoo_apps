<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- إضافة عمود الجورنال لقائمة فواتير الموردين -->
    <record id="view_vendor_bill_tree_inherit_journal" model="ir.ui.view">
        <field name="name">account.move.vendor.bill.tree.journal</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='invoice_date']" position="after">
                <field name="journal_id"/>
            </xpath>
        </field>
    </record>

    <!-- إضافة فلتر على الجورنال -->
    <record id="view_vendor_bill_search_inherit_journal" model="ir.ui.view">
        <field name="name">account.move.vendor.bill.search.journal</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter string="Journal" name="journal_id" domain="[]" context="{'group_by':'journal_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>
