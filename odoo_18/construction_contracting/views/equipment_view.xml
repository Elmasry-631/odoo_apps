<odoo>
    <!-- تعديل فيو المنتج -->
    <record id="view_product_template_form_inherit_equipment" model="ir.ui.view">
        <field name="name">product.template.form.inherit.equipment</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <!-- نضيف الـ Checkbox تحت الاسم -->
            <xpath expr="//field[@name='property_stock_inventory']" position="after">
                <group>
                    <field name="is_equipment"/>
                </group>
            </xpath>

            <!-- تاب جديد يظهر للمعدات -->
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Equipment Info">
                    <group>
                        <field name="default_code"/> <!-- الكود -->
                        <field name="uom_id"/>        <!-- وحدة القياس -->
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
