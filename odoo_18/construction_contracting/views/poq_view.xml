<odoo>
    <!-- List View -->
    <record id="poq_list_view" model="ir.ui.view">
        <field name="name">ie.cst.poq.tree</field>
        <field name="model">ie.cst.poq</field>
        <field name="arch" type="xml">
            <list string="POQ">
                <field name="f_product"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="poq_form_view" model="ir.ui.view">
        <field name="name">ie.cst.poq.form</field>
        <field name="model">ie.cst.poq</field>
        <field name="arch" type="xml">
            <form string="POQ">
                <sheet>
                    <group>
                        <field name="f_product"/>
                    </group>
                            <field name="material_line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                </list>
                            </field>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
