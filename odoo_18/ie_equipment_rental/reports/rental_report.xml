<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Report Action -->
    <record id="action_equipment_rental_report" model="ir.actions.report">
        <field name="name">Equipment Rental Contract</field>
        <field name="model">equipment.rental</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ie_equipment_rental.report_equipment_rental</field>
        <field name="print_report_name">'RentalContract_' + object.name</field>
    </record>

    <!-- Report Template -->
    <template id="report_equipment_rental">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <!-- Header -->
                    <div style="text-align:center; margin-bottom:30px;">
                        <h1 style="margin-bottom:5px;">Equipment Rental Contract</h1>
                        <hr style="border:1px solid #333;"/>
                    </div>

                    <t t-foreach="docs" t-as="doc">
                        <!-- Contract Info -->
                        <div style="margin-bottom:20px;">
                            <p><strong>Contract Reference:</strong> <span t-esc="doc.name"/></p>
                            <p><strong>Customer:</strong> <span t-esc="doc.partner_id.name"/></p>
                            <p><strong>Start Date:</strong> <span t-esc="doc.start_date"/></p>
                            <p><strong>End Date:</strong> <span t-esc="doc.end_date"/></p>
                        </div>

                        <!-- Equipment Table -->
                        <table style="width:100%; border-collapse: collapse; margin-bottom:20px;">
                            <thead>
                                <tr style="background-color:#4CAF50; color:white;">
                                    <th style="border:1px solid #000; padding:5px;">Equipment Name</th>
                                    <th style="border:1px solid #000; padding:5px; text-align:center;">Days</th>
                                    <th style="border:1px solid #000; padding:5px; text-align:right;">Price per Day</th>
                                    <th style="border:1px solid #000; padding:5px; text-align:right;">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.equipment_line_ids" t-as="line">
                                    <tr style="background-color:#f9f9f9;">
                                        <td style="border:1px solid #000; padding:5px;"><span t-esc="line.product_id.product_id.name"/></td>
                                        <td style="border:1px solid #000; padding:5px; text-align:center;"><span t-esc="line.days_count"/></td>
                                        <td style="border:1px solid #000; padding:5px; text-align:right;">
                                            <span t-esc="line.price_per_day"/> $
                                        </td>
                                        <td style="border:1px solid #000; padding:5px; text-align:right;">
                                            <span t-esc="line.subtotal"/> $
                                        </td>
                                    </tr>
                                </t>
                                <!-- Total Row -->
                                <tr style="font-weight:bold; background-color:#e0e0e0;">
                                    <td colspan="3" style="border:1px solid #000; padding:5px; text-align:right;">Total Amount</td>
                                    <td style="border:1px solid #000; padding:5px; text-align:right;">
                                        <span t-esc="doc.total_amount"/> $
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Signatures -->
                        <div style="margin-top:50px;">
                            <table style="width:100%;">
                                <tr>
                                    <td style="text-align:left;">
                                        ___________________________<br/>
                                        Customer
                                    </td>
                                    <td style="text-align:right;">
                                        ___________________________<br/>
                                        Company Representative
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
